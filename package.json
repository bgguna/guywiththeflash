{
  "name": "guywiththeflash",
  "version": "1.0.0",
  "description": "Simple blog website for GuyWithTheFlash.",
  "main": "index.js",
  "scripts": {
    "build-css": "stylus source/stylesheets/index.styl -o static/css",
    "watch-css": "stylus source/stylesheets/index.styl -o static/css -w",
    "clean": "rm -rf static/css && mkdir -p static/css",
    "build": "npm run clean && npm run build-css",
    "watch": "npm run clean && npm run watch-css & nodemon server -e js,jade",
    "start": "node server"
},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bgguna/guywiththeflash.git"
  },
  "keywords": [
    "blog",
    "instagram",
    "post",
    "website",
    "site",
    "node"
  ],
  "author": "Bogdan Guna",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bgguna/guywiththeflash/issues"
  },
  "homepage": "https://github.com/bgguna/guywiththeflash#readme"
}
